{
  "legacyEditor": false,
  "livePreview": false,
  "vimMode": true,
  "promptDelete": false,
  "tabSize": 4,
  "useTab": true,
  "spellcheck": true,
  "pdfExportSettings": {
    "pageSize": "A5",
    "landscape": false,
    "margin": "0",
    "downscalePercent": 75
  },
  "autoPairMarkdown": true,
  "attachmentFolderPath": "assets",
  "showIndentGuide": true,
  "lineWrap": true,
  "foldIndent": true,
  "alwaysUpdateLinks": true,
  "foldHeading": false,
  "defaultViewMode": "preview",
  "showFrontmatter": false,
  "userIgnoreFilters": [
    "^.*\\/(?!(node_modules))[^\\/]+$"
  ],
  "readableLineLength": true,
  "showInlineTitle": true,
  "showLineNumber": false
}